{
    "compilerOptions": {
      "declaration": true,
      "lib": ["ES6"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "outDir": "dist/commonjs",
      "removeComments": true,
      "rootDir": "./",
      "sourceMap": true,
      "esModuleInterop": true,
      "target": "ES6"
    },
    "exclude": [
      "bower_components",
      "dist/commonjs",
      "node_modules"
    ]
  }